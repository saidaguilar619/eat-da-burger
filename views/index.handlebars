<h1>Burgers</h1>

<h2>Burgers that are devoured</h2>

<ul>
    {{#each burgers}}
        {{#if devoured}}
          {{> button devoured=true}}
        {{/if}}
    {{/each}}
</ul>

<h2>Burgers that aren't devoured</h2>

<ul>
    {{#each burgers}}
     {{#unless devoured}}
          {{> button devoured=false}}
        {{/unless}}
    {{/each}}
</ul>

<form class="create-form">
    <div class="form-group">
        <label for="burger">Burger Name:</label>
        <input type="text" id="burger_name" name="burger_name">
    </div>

    <div class="form-group">
        <label for="devoured">Devoured?</label> <br />
        <input type="radio" name="devoured" value="1" checked> Devoured!<br />
        <input type="radio" name="devoured" value="0"> Not Devoured!
    </div>

    <button type="submit" id="submit">Add Burger</button>

</form>